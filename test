cat < /etc/passwd | tr a-z A-Z | sort -u || echo sort failed!
cat < /etc/passwd | tr a-z A-Z | sort -u > out || echo sort failed!
n=1
for bad in \
  '`' \
  '>' \
  '<' \
  'a >b <' \
  ';' \
  '; a' \
  'a ||' \
  'a
     || b' \
  'a
     | b' \
  'a
     ; b' \
  'a;;b' \
  'a&&&b' \
  'a|||b' \
  '|a' \
  '< a' \
  '&& a' \
  '||a' \
  '(a|b' \
  'a;b)' \
  '( (a)' \
  'a>>>b'
do
  echo "$bad" >test$n.sh || exit
  ../timetrash -p test$n.sh >test$n.out 2>test$n.err && {
    echo >&2 "test$n: unexpectedly succeeded for: $bad"
    status=1
  }
  test -s test$n.err || {
    echo >&2 "test$n: no error message for: $bad"
    status=1
  }
  n=$((n+1))
done
